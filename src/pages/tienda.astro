---
import Layout from "../layouts/Layout.astro";
import Navbar from "../components/Navbar.astro"
---
<style>
    body{
        background-color: rgb(20, 20, 20);
        color: aliceblue;
    }
    html{
        background:#13151a;
    }
</style>
<Layout title="Tienda - Bytech Paraguay">
    <Navbar/>
    <main class="flex flex-col md:flex-row container mx-auto max-w-7xl">
      <div class="space-y-4 p-2 w-full md:max-w-[12rem]">
        <h2 class="text-2xl">Filtros</h2>
        <h3 class="text-xl mb-2">Categoria</h3>
        <div id="filters-container" class="text-xl space-y-2">
          <div>
            <input type="checkbox" class="check" id="notebook" />
            <label for="notebook">Notebook</label>
          </div>
          <div>
            <input type="checkbox" class="check" id="impresora" />
            <label for="impresora">Impresora</label>
          </div>
          <div>
            <input type="checkbox" class="check" id="monitor" />
            <label for="monitor">Monitor</label>
          </div>
          <div>
            <input type="checkbox" class="check" id="almacenamiento" />
            <label for="almacenamiento">Almacenamiento</label>
          </div>
        </div>
      </div>

      <div
        id="products-wrapper"
        class="w-full mx-auto grid grid-cols-2 sm:grid-cols-3 xl:grid-cols-5 gap-3 place-content-center my-4"
      ></div>
    </main>
    <script src="/scripts/tienda.js" type="module" defer></script>
  </Layout>
