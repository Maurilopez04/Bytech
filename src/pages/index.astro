---
import Layout from '../layouts/Layout.astro';
import ProductosSection from '../components/ProductosSection.astro';
import Hero from '../components/Hero.astro';
import Servicios from '../components/Servicios.astro'
import Contact from '../components/Contact.astro';
---

<Layout title="Bytech Paraguay">
<Hero/>
<Servicios/>
<ProductosSection/>
    <div class="bg-yellow-400">
        <div class="container mx-auto px-6 text-center py-10 md:flex md:justify-between xl:px-32 md:items-center">
            <h2 class="mb-6 md:mb-0 text-3xl font-bold text-center text-white">Conoce Todos Nuestros Productos</h2>
            <a href="/tienda" class="bg-white font-bold rounded-full py-4 px-8 shadow-lg uppercase tracking-wider hover:bg-gray-200 transition ease-in-out duration-300">Ir a Tienda</a>
        </div>
    </div>
	
	<Contact/>
</Layout>