---
interface Props {
icon: string
title: string
description: string
link: string
}
const { icon, title, description, link }= Astro.props;
---
<div class="bg-stone-900 shadow-md p-8 transition duration-500 transform hover:-translate-y-2">
  <i class={`${icon} text-4xl text-yellow-500 mb-6`}></i>
  <h3 class="text-xl font-semibold mb-4">{title}</h3>
  <p class=" text-gray-300">{description}</p>
  <a href={link} class="block mt-8 text-yellow-500 hover:underline">Más información <i class="fas fa-chevron-right"></i></a>
</div>
