---
interface Props {
	title: string;
    categoria: string;
    descripcion: string;
    img:string;
}

const { title, categoria, descripcion, img } = Astro.props;
---
<div class="xl:h-full w-full sm:w-1/2 lg:w-1/3 xl:w-1/5 p-1">
    <div class="bg-white p-6 rounded-lg">
        <img src={`/img/${img}`} alt="Producto 1" class="h-full rounded w-full object-cover object-center mb-6">
        <p class="tracking-widest text-yellow-600 text-sm font-medium title-font">{categoria}</p>
        <h2 class="text-lg text-gray-900 font-medium title-font mb-0">{title}</h2>
        <p class="leading-relaxed text-base">{`Gs. ${descripcion}`}</p>
       

    </div>
</div>