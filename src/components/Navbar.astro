---
import Mymodal from "./mymodal.astro"
---
<nav class=" bg-zinc-900 py-4 mb-6 mt-14">
    <div
      class="container px-4 flex flex-col sm:flex-row gap-6 mx-auto items-center justify-center"
    >
    <h1 class="text-3xl mx-3">Tienda</h1>
      <div class="relative w-full">
        <input
          type="text"
          id="search"
          class="bg-gray-700 rounded-full p-2 pl-10 transition w-full"
          placeholder="Buscar Productos..."
        />
        <svg
          class="absolute left-2 top-1/2 -translate-y-1/2"
          xmlns="http://www.w3.org/2000/svg"
          width="20"
          height="20"
          viewBox="0 0 24 24"
          stroke-width="2"
          stroke="currentColor"
          fill="none"
          stroke-linecap="round"
          stroke-linejoin="round"
        >
          <path stroke="none" d="M0 0h24v24H0z" fill="none" />
          <path d="M10 10m-7 0a7 7 0 1 0 14 0a7 7 0 1 0 -14 0" />
          <path d="M21 21l-6 -6" />
        </svg>
      </div>
      <button id="open-modal-btn" class="bg-yellow-500 py-4 px-8 text-white font-bold uppercase text-xs rounded hover:bg-yellow-400 w-72">
        Realizar un pedido
      </button>
    </div>
  </nav>
  <Mymodal/>